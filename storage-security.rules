rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para imágenes de productos - Solo admins pueden subir
    match /products/{allPaths=**} {
      // Permitir lectura a todos (para mostrar imágenes)
      allow read: if true;
      
      // Solo admins pueden subir/modificar imágenes
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.admin == true;
    }
    
    // Reglas para imágenes de productos (ruta alternativa)
    match /productospcu/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.admin == true;
    }
    
    // Reglas para avatares de usuarios - Solo el propio usuario
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para imágenes de categorías - Solo admins
    match /categorias/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.admin == true;
    }
    
    // Denegar acceso a cualquier otra ruta
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
