rules_version = '2';

// Firebase Storage Security Rules - ARREGLADAS COMPLETAMENTE
service firebase.storage {
  match /b/{bucket}/o {
    
    // REGLA UNIVERSAL - Permite TODO a usuarios autenticados
    match /{allPaths=**} {
      // Lectura pública para todos
      allow read: if true;
      
      // Escritura para usuarios autenticados (crear, actualizar, borrar)
      allow write, delete: if request.auth != null;
    }
    
    // Reglas específicas con validación de tamaño (opcionales pero útiles)
    match /products/{productId}/{type}/{fileName} {
      allow read: if true;
      allow write, delete: if request.auth != null 
        && request.resource.size < 100 * 1024 * 1024; // Max 100MB
    }
    
    match /categorias/{categoryId}/{fileName} {
      allow read: if true;
      allow write, delete: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
}
