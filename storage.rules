rules_version = '2';

// Firebase Storage Security Rules - ARREGLADAS COMPLETAMENTE
service firebase.storage {
  match /b/{bucket}/o {
    
    // REGLA UNIVERSAL - Permite TODO a usuarios autenticados
    match /{allPaths=**} {
      // Lectura pública para todos
      allow read: if true;
      
      // Escritura para usuarios autenticados (crear, actualizar, borrar)
      allow write, delete: if request.auth != null;
    }
    
    // Reglas específicas con validación de tamaño (opcionales pero útiles)
    match /products/{productId}/{type}/{fileName} {
      allow read: if true;
      allow write, delete: if request.auth != null 
        && request.resource.size < 100 * 1024 * 1024; // Max 100MB
    }
    
    match /categorias/{categoryId}/{fileName} {
      allow read: if true;
      allow write, delete: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
    
    // Profile pictures - Usuarios solo pueden subir/eliminar sus propias fotos
    match /profile_pics/{userId}/{fileName} {
      // Lectura pública para mostrar fotos de perfil
      allow read: if true;
      
      // Escritura solo para el dueño del perfil
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // Max 5MB
        && request.resource.contentType.matches('image/.*'); // Solo imágenes
      
      // Eliminación solo para el dueño
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
