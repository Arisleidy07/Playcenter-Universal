# ============================================
# FIREBASE CONFIGURATION
# ============================================
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# FIREBASE CLOUD MESSAGING (FCM)
# ============================================
# VAPID Key pública para Web Push
# Obtener de: Firebase Console -> Project Settings -> Cloud Messaging -> Web Push certificates
REACT_APP_FIREBASE_VAPID_KEY=your-vapid-public-key

# ============================================
# CLOUD FUNCTIONS ENVIRONMENT VARIABLES
# (Configurar en Firebase Console o con firebase functions:config:set)
# ============================================

# SendGrid API Key para envío de emails
# Obtener de: https://app.sendgrid.com/settings/api_keys
# firebase functions:config:set sendgrid.apikey="SG.xxxxxxxxxxxxxx"
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Email remitente (debe estar verificado en SendGrid)
# firebase functions:config:set mail.from="no-reply@tudominio.com"
MAIL_FROM=no-reply@playcenter.com

# URL del sitio (para links en emails)
# firebase functions:config:set site.url="https://tudominio.com"
SITE_URL=https://playcenter.com

# API Key para funciones administrativas (generar un UUID seguro)
# firebase functions:config:set admin.apikey="tu-api-key-secreta"
ADMIN_API_KEY=your-secure-admin-api-key

# Secret para tokens de unsubscribe (generar un string aleatorio seguro)
# firebase functions:config:set unsubscribe.secret="tu-secret-key"
UNSUBSCRIBE_SECRET=your-unsubscribe-secret

# ============================================
# CLOUDINARY (SI LO USAS)
# ============================================
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Nunca subas el archivo .env a Git (está en .gitignore)
# 2. Usa diferentes valores para desarrollo, staging y producción
# 3. Rota las claves API periódicamente por seguridad
# 4. Para Cloud Functions, usar: firebase functions:config:set key.subkey="valor"
# 5. Ver config actual: firebase functions:config:get
# 6. Para emuladores locales, crear archivo functions/.runtimeconfig.json con la config
